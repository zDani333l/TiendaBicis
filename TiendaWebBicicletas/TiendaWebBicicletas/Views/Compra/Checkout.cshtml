@using TiendaWebBicicletas.Models
@model CheckoutViewModels
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}


<main class="ps-main">
    <div class="ps-checkout pt-80 pb-80">
        <div class="ps-container">
                @using (Html.BeginForm("Checkout", "Compra", FormMethod.Post, new { @class = "ps-checkout__form", role = "form" }))
                {

                
                    <div class="row">
                        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12 ">
                            <div class="ps-checkout__billing">
                                <h3>Detalle Compra</h3>
                                <div class="form-group form-group--inline">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.LabelFor(m => m.Nombres)
                                    @Html.TextBoxFor(m => m.Nombres, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Nombres, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group--inline">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.LabelFor(m => m.Apellidos)
                                    @Html.TextBoxFor(m => m.Apellidos, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Apellidos, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group--inline">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.LabelFor(m => m.Direccion)
                                    @Html.TextBoxFor(m => m.Direccion, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Direccion, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group--inline">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.LabelFor(m => m.Ciudad)
                                    @Html.TextBoxFor(m => m.Ciudad, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Ciudad, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group--inline">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.LabelFor(m => m.Pais)
                                    @Html.TextBoxFor(m => m.Pais, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Pais, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group--inline">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.LabelFor(m => m.CorreoElectronico)
                                    @Html.TextBoxFor(m => m.CorreoElectronico, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.CorreoElectronico, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group--inline">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.LabelFor(m => m.NumeroContacto)
                                    @Html.TextBoxFor(m => m.NumeroContacto, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.NumeroContacto, "", new { @class = "text-danger" })
                                </div>

                                <h3 class="mt-40"> Informacion Adicional</h3>
                                <div class="form-group form-group--inline textarea">
                                    @Html.LabelFor(m => m.InformacionAdicional)
                                    @Html.TextAreaFor(m => m.InformacionAdicional,new { @class = "form-control", rows = "5", placeholder = "Notas sobre su pedido, p. Ej. notas especiales para la entrega." })
                                </div>
                            </div>
                        </div>


                        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 ">
                            <div class="ps-checkout__order">
                                <header>
                                    <h3>Tu Orden</h3>
                                </header>
                                <div class="content">
                                    <table class="table ps-checkout__products">
                                        <thead>
                                            <tr>
                                                <th class="text-uppercase">Producto</th>
                                                <th class="text-uppercase">Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Productos)
                                            {
                                                <tr>
                                                    <td>@item.Producto.NombreProducto</td>
                                                    <td>$ @item.Producto.Precio</td>
                                                </tr>
                                            }
                                            <tr>
                                                <td>Total Orden</td>
                                                <td>$ @Model.TotalOrden</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <footer>
                                    <h3>MÉTODO DE PAGO</h3>
                                    <div class="form-group cheque">
                                        <div class="ps-radio">
                                            <input class="form-control" type="radio" id="rdo01" name="payment" checked>
                                            <label for="rdo01">Cheque Payment</label>
                                            <p>Envíe su cheque a Nombre de la tienda, Calle de la tienda, Ciudad de la tienda, Estado / condado de la tienda, Código postal de la tienda.</p>
                                        </div>
                                    </div>
                                    <div class="form-group paypal">
                                        <div class="ps-radio ps-radio--inline">
                                            <input class="form-control" type="radio" name="payment" id="rdo02">
                                            <label for="rdo02">Paypal</label>
                                        </div>
                                        <ul class="ps-payment-method">
                                            <li><a href="#"><img src="~/Tienda/images/payment/1.png" alt=""></a></li>
                                            <li><a href="#"><img src="~/Tienda/images/payment/2.png" alt=""></a></li>
                                            <li><a href="#"><img src="~/Tienda/images/payment/3.png" alt=""></a></li>
                                        </ul>
                                        <button class="ps-btn ps-btn--fullwidth">Realizar Pedido<i class="ps-icon-next"></i></button>
                                    </div>
                                </footer>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
</main>